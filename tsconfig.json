{
	"compilerOptions": {
		"outDir": "./build",

		"target": "es2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,

		"allowJs": true,
		"checkJs": true,

		"jsx": "react-jsx",
		"types": ["vite/client"],
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		}
	},
	"exclude": [
		"./node_modules",
		"./build/**/*"
	]
}
